      <script>
        el_but_link = {};
        function year_onclick() {
          var ks = Object.keys(el_but_state);
          for (var i=0; i<ks.length; i++) {
            var b = ks[i];
            if (el_but_state[b]) {
              location.href = el_but_link[b];
            }
          }
        }

        function button_onclick(button_id, line_color) {
          var fingerprint = document.getElementById("fingerprint");
          var button = document.getElementById(button_id);
          fingerprint.style.display = "block";
          fingerprint.style.top =  (button.getBoundingClientRect().y + 10) + "px";
          fingerprint.style.left = (button.getBoundingClientRect().x + 10) + "px";
          document.getElementById("finger_path").style.fill = line_color;
          location.href = el_but_link[button_id];
        }

      </script>

      <div id="table" style="display:table; margin:0 auto; margin-top: 42px;">
        <div class="" align="center" style="display:content; border:0px; padding:0px; margin:0px">

          {% for b in template_params['button']['choices'] %}             
            {% set button_id = "button_{}".format(loop.index) %}
            {% set button_color = b['front_color'] %}
            <script>
              el_but_link[ "{{ button_id }}" ] = '{{b['link']}}';
            </script>
                  
            <div id="{{ button_id }}" class="sh_chalk_font" 
                style="display: inline-block;
                        background: {{b['back_color']}};
                        color: {{b['front_color']}};
                        width: 130px;
                        height: 130px;
                        border-radius: 65px;
                        padding: 0px;
                        box-shadow: 0px 5px 5px #dddddd;
                        cursor: pointer;
                        margin-right: 13px;
                        margin-left: 13px;
                        margin-bottom: 8px;
                        margin-top: 17px;
                        vertical-align: middle;
                        font-size: {{ template_params['button']['font_size'] }};"
                        onclick="button_onclick('{{ button_id }}', '{{ button_color }}')">

              <!-- margin-top below doesn't behave the same way on desktops and mobiles
                   this is now optimized for mobile, so not well centered on desktops (Windows Chrome)
               -->
              <div id="{{ "text_{}".format(loop.index) }}",  
                  style="vertical-align: middle;
                        margin-top: -25px;
                        height: 130px;">
                  {{ b['title'] }}
              </div>                
            </div>

            {% if loop.index % 2 == 0 %}
              </div>
              <div class="" align="center" style="display:content; border:0px; padding:0px; margin:0px">
            {% endif %}
          {% endfor %}

        </div>
        <div class="" align="center" style="display:content; border:0px; padding:0px; margin:0px">
